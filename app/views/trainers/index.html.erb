<%- model_class = Trainer -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:contact) %></th>
      <th><%= model_class.human_attribute_name(:website) %></th>
      <th><%= model_class.human_attribute_name(:facebook_site) %></th>
      <th><%= model_class.human_attribute_name(:rating) %></th>
      <th><%= model_class.human_attribute_name(:specialities) %></th>
      <th><%= model_class.human_attribute_name(:home_town) %></th>
      <th><%= model_class.human_attribute_name(:products) %></th>
      <th><%= model_class.human_attribute_name(:qualifications) %></th>
      <th><%= model_class.human_attribute_name(:image) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <%if @trainers.count > 0 %>
    <% @trainers.each do |trainer| %>
      <tr>
        <td><%= link_to trainer.id, trainer_path(trainer) %></td>
        <td><%= trainer.name %></td>
        <td><%= trainer.contact %></td>
        <td><%= trainer.website %></td>
        <td><%= trainer.facebook_site %></td>
        <td><%= trainer.rating %></td>
        <td><%= trainer.specialities %></td>
        <td><%= trainer.home_town %></td>
        <td><%= trainer.products %></td>
        <td><%= trainer.qualifications %></td>
        <td><%= trainer.image %></td>
        <td><%=l trainer.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_trainer_path(trainer), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      trainer_path(trainer),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
    <%else%>
    <tr><td colspan="13" style="color:red;text-align:center;">No information found.</td></tr>
    <%end%>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_trainer_path,
            :class => 'btn btn-primary' %>
